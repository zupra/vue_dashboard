pre
  padding 1em
  background #EEE
  margin 1em 0

hr
  margin: 1em 0;
  height: 1px;
  border: 0;
  border-top: 1px solid rgba(#777, .5);

  //border-top: 1px dashed $orange //violet
  &.H1
    margin 5em 3em 4em
    text-align: center
    overflow: visible
    border 0
    background-image: linear-gradient(to right, rgba(#000, 0), rgba(violet 0.75), rgba(#000, 0));
    &:after
      content: "ยง";
      display: inline-block;
      position: relative;
      top: -0.7em;
      font-size: 1.5em;
      padding: 0 0.25em;
      background #f7f7f7;

.Tag
  font-family: "Courier New", Courier, monospace

  background: #f9f0e2;
  padding: .3em;
  margin: 1em 0;
  &:before
    content '[ '
  &:after
    content ' ]'
  &:before
  &:after
    color blue


