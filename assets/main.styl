@import '__var'
@import '__baseApp'

*
  margin 0
  padding 0
  box-sizing border-box

:root
  font 100%/1.4 'Roboto', 'Helvetica Neue', sans-serif;
  @media (max-width: 400px)
    font-size: 14px
body
  color $text
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased



.Wrap
  padding: 4em 1em 1em
  margin: auto;
  max-width: 1200px;
.MainFullWidth
  margin: 4em 1em 1em



a, .link
  color: $link
.link
  text-decoration underline

@import '_Utility'
@import '_Grid'
@import '_Card'

@import '_Helper'
@import '_Form'
@import '_Table'
@import '_List'


.H1,h1,h2,h3,h4,h5
  line-height 1
  margin 0 0 1em
h1,h2
  color $header
  font-weight: 400
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
p
  margin-bottom .75em


