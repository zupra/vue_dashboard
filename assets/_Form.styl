// https://github.com/necolas/normalize.css/blob/master/normalize.css
// https://github.com/csstools/sanitize.css/blob/master/sanitize.css

$shadow_button()
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
$shadow_input()
  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08)
$border-input =  #bdc3c7

@import '_Form__Search'
@import '_Form__Helpers'
@import '_Form__Chekbox&Radio'
@import '_Form__Select'


//iOS:fix remove shadow | appearance:none - нужны (color, date, time, month, ...etc)
input
textarea
  background-clip: padding-box;
[type="search"]
  -webkit-appearance: textfield;
//FF:fix Убираем рамку в фокусе
button::-moz-focus-inner
  border: 0
select:not([multiple]):-moz-focusring
  color: transparent;
  text-shadow: 0 0 0 #000;


[type="color"]
  height: 3em;
  background: transparent;
  border: 0
  cursor pointer

[type="file"]
  cursor: pointer
  background-color: #FFF
  padding: 0.5em !important;
  height: auto !important;

/*
[type="number"]
  -moz-appearance: textfield;
[type=number]::-webkit-inner-spin-button,
[type=number]::-webkit-outer-spin-button
  -webkit-appearance: none
  margin: 0
*/
input::-webkit-inner-spin-button,
input::-webkit-outer-spin-button
  // vertical-align: middle
  align-self: center

.disabled
[disabled]
  pointer-events none
  opacity .5


//input box-shadow/font
input:not([type="range"]):not([type="color"])
select
textarea
  $shadow_input()
  font-family: 'Roboto Condensed', sans-serif; //inherit
  line-height: 1.2


input
select
.btn, button
  vertical-align: middle;


$size_Mod()
  @media (min-width: 500px)
    &.sm
      font-size .6rem
    &.lg
      font-size 1rem
    &.xl
      font-size 1.2rem
input
.btn, button
select
textarea
  font-size .8rem
  $size_Mod()
  outline: 0



$base_form_el_size()
  // vertical-align: middle;
  // line-height: 1.15
  // padding .6em 1em
  // display: inline-flex
  // align-items: center
  padding: 0 1em
  height: 2.4em
//base size el
input:not([type=color]):not([type=radio]):not([type=checkbox])
.select, select:not([multiple])
textarea
.btn, button
  $base_form_el_size()
  border-radius .3em

//input focus
input:not([type=color]):not([type=range]):not([type=radio]):not([type=checkbox])
.select, select
textarea
  border: 1px solid $border-input
  &:focus
    border-radius: 0
    border-top-color: $link


textarea
  height: 8em
  padding: .7em 1em !important


// === BUTTON ===
$fill_Mod()
  &.fill
    &.lite
      color: $link
      background: snow
      &:hover
        text-decoration underline
    &.red
      background: $red
      &:hover
        background $red + 20%
    &.green
      background: $green
      &:hover
        background $green + 20
    &.orange
      background $orange
      &:hover
        background $orange + 20% //#eea236 - 10

$flat_Mod()
  &.flat
    //reset
    background-color: transparent;
    box-shadow none
    color #444
    text-transform uppercase
    font-weight 500
    &:hover
      background rgba(#777, .2)
    &.blue
      color $blue
      &:hover
        background: rgba($blue, .2)
    &.red
      color $red
      &:hover
        background: rgba($red, .2)
    &.green
      color $green
      &:hover
        background: rgba($green, .2)
    &.orange
      color $orange
      &:hover
        background: rgba($orange, .2)


$outline_Mod()
  &.outline

    border 2px solid currentColor
    border-radius 2em

    transition: none //background 0.3s
    background: snow
    color #999
    &:hover
      color #FFF !important
      border-color: transparent
      background #9e9e9e
    &.blue
      color $blue
      &:hover
        background: $blue
    &.red
      color $red
      &:hover
        background: $red
    &.green
      color $green
      &:hover
        background: $green
    &.orange
      color $orange
      &:hover
        background: $orange

//base
.btn
  // vertical-align middle
  // display inline-block
  white-space nowrap
  text-decoration none
.btn, button
  // -webkit-appearance: button;
  // line-height: 1
  display: inline-flex
  align-items: center
  justify-content: center

  $shadow_button()
  border: 1px solid transparent
  cursor: pointer
  user-select: none
  transition: background 0.3s

  //default
  background: $blue
  color: #FFF
  &:active
    transform: translateY(2px)
  &:hover
    background $blue + 20
  //icon
  img, svg
    margin-right: .5em

  $fill_Mod()
  $flat_Mod()
  $outline_Mod()
  $size_Mod()
