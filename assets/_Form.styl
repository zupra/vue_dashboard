$shadow_btn_button-group()
  // box-shadow: 0 2px 5px 0 rgba(#000, .2), 0 1px 10px 2px rgba(#444, .2)
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

$border-input =  #bdc3c7

@import '_Form__Search'
@import '_Form__Helpers'
@import '_Form__Chekbox&Radio'
@import '_Form__Select'


input[type="color"]
input[type="range"]
  vertical-align: middle;
input[type="color"]
  height: 3em;
  background: transparent;
  border: 0
  cursor pointer
input[type="file"]
  background-color: #FFF


/**
// Прикольно НО иногда нужны системные (color, date, time, month, ...etc)
input
  appearance: none;
*/

//Remove iOS input shadow
input
textarea
  background-clip: padding-box;

//========== BASE form_EL ===============

//FF fix
button::-moz-focus-inner
  border: 0
select:not([multiple]):-moz-focusring
  color: transparent;
  text-shadow: 0 0 0 #000;

.disabled
[disabled]
  pointer-events none
  opacity .5


$size_Mod()
  &.sm
    font-size .6rem
  &.lg
    font-size 1rem
  &.xl
    font-size 1.2rem


$base_form_el_size()
  line-height: 1.15
  padding .6em 1em
input
.btn, button
select
textarea
  font-size .8rem //font: inherit
  $size_Mod()
  outline: 0





//input box-shadow
input:not([type="range"]):not([type="color"])
select
textarea
  //background-color: #FFF
  box-shadow: 0 4px 6px rgba(50,50,93,.11), 0 1px 3px rgba(0,0,0,.08)

//input el_size
input:not([type=color]):not([type=range]):not([type=radio]):not([type=checkbox])
.select, select:not([multiple])
textarea
.btn, button
  $base_form_el_size()
  border-radius .3em


//input focus
input:not([type=color]):not([type=range]):not([type=radio]):not([type=checkbox])
.select, select
textarea
  border: 1px solid $border-input
  &:focus
    border-radius: 0
    border-top-color: $link


// === BUTTON ===
$fill_Mod()
  &.fill
    &.lite
      color: $link
      background: snow
      &:hover
        text-decoration underline
    &.red
      background: $red
      &:hover
        background $red + 20%
    &.green
      background: $green
      &:hover
        background $green + 20
    &.orange
      background $orange
      &:hover
        background $orange + 20% //#eea236 - 10

$flat_Mod()
  &.flat
    //reset
    background-color: transparent;
    box-shadow none
    color #444
    text-transform uppercase
    font-weight 500
    &:hover
      background rgba(#777, .2)
    &.blue
      color $blue
      &:hover
        background: rgba($blue, .2)
    &.red
      color $red
      &:hover
        background: rgba($red, .2)
    &.green
      color $green
      &:hover
        background: rgba($green, .2)
    &.orange
      color $orange
      &:hover
        background: rgba($orange, .2)


$outline_Mod()
  &.outline

    border 2px solid currentColor
    border-radius 2em

    transition: none //background 0.3s
    background: snow
    color #999
    &:hover
      color #FFF !important
      border-color: transparent
      background #9e9e9e
    &.blue
      color $blue
      &:hover
        background: $blue
    &.red
      color $red
      &:hover
        background: $red
    &.green
      color $green
      &:hover
        background: $green
    &.orange
      color $orange
      &:hover
        background: $orange

//base
.btn
  display inline-block
  white-space nowrap
  text-decoration none
  vertical-align middle
.btn, button
  $shadow_btn_button-group()
  border: 1px solid transparent
  cursor: pointer
  user-select: none
  transition: background 0.3s

  //default
  background: $blue
  color: #FFF
  &:active
    transform: translateY(2px)
  &:hover
    background $blue + 20

.btn
  $fill_Mod()
  $flat_Mod()
  $outline_Mod()
  $size_Mod()
