$zIndex = 10

.slideSidebar-enter-active,
.slideSidebar-leave-active
  transition transform .4s
.slideSidebar-enter,
.slideSidebar-leave-active
  transform translateX(-100%) // - 24em


.scrollableArea
  height: 100%
  overflow-y: auto
  // overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  // хром, сафари
  &::-webkit-scrollbar { width: 0; }
  // ie 10+
  & { -ms-overflow-style: none; }


#layout
  display flex

#sidebar, #main
  height 100vh

#main
  // !!!
  // min-width: 375px;
  flex 1
  width 100%
  overflow hidden
  background #f7f7f7
  // @media (max-width: 800px)




$sidebar()
  @media (max-width: 800px)
    position absolute
  z-index $zIndex
  width 220px
  padding-top 3em
  background $header
  color $header_text
#sidebar
  $sidebar()

  nav
    padding 1em
  a
    display block
    padding .5em 0
    &:hover
      color #2196f3
    svg
      vertical-align: bottom //middle
      fill currentColor;


