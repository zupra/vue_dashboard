$width = 280px
$time = ($width / 7)
$M = ($width / 4)



.Calendar_Input
  position relative
  display: inline-block;
  input
    cursor: pointer
  .Calendar
    position: absolute;
    z-index: 1;

.Calendar
  background #FFF
  box-shadow: 0 1px 8px rgba(#000, .25);
  width: $width
  text-align: center
  user-select: none
.Cr
  &-Head,
  &-Week,
  &-Days
    display: flex

  &-Head,
  &-Week
    font-weight bold

  &-Week
    line-height: 2em
    &_day
      width: $time

  &-Head
    background: #477dca
    color: #FFF
    justify-content: space-between
    line-height: $time

    &_current
      flex: 1

    &_ltMonth,
    &_gtMonth
      background #3498db
      cursor: pointer
      width: $time
      &:hover
        background: #3498db + 10%
    // .hidden
    //   pointer-events: none
    //   background: transparent

  &-Days
    flex-wrap: wrap
    line-height: $time

    &_blank,
    &_day
      width: $time

    &_blank
      color #dee2e6

    &_day
      cursor: pointer
      border-radius: 50%
      &:hover:not(.Today):not(.clickedDay)
        background: #dee2e6

    // .hidden
    //   color #dee2e6
    //   pointer-events: none

    .Today
      background: aliceblue
